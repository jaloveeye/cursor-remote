{
  "name": "cursor-remote-extension",
  "displayName": "Cursor Remote",
  "description": "Remote control extension for Cursor IDE",
  "version": "0.1.0",
  "author": {
    "name": "김형진",
    "email": "jaloveeye@gmail.com",
    "url": "https://jaloveeye.com"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cursorRemote.start",
        "title": "Start Cursor Remote Server"
      },
      {
        "command": "cursorRemote.stop",
        "title": "Stop Cursor Remote Server"
      },
      {
        "command": "cursorRemote.toggle",
        "title": "Toggle Cursor Remote Server"
      }
    ],
    "configuration": {
      "title": "Cursor Remote",
      "properties": {
        "cursorRemote.useCLIMode": {
          "type": "boolean",
          "default": false,
          "description": "Use Cursor CLI instead of Cursor IDE for chat interactions. When enabled, prompts will be sent to the 'agent' command instead of the IDE chat panel."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.74.0",
    "@types/ws": "^8.5.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "ws": "^8.19.0"
  }
}
